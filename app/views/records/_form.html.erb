    document.addEventListener('turbolinks:load', ready);
    function ready() {
            parse_verschenen();
            parse_redactie();
            parse_medewerkers();
            parse_eigenaar();
            parse_uitgever();
            parse_drukker();
            parse_uitgave();
            parse_ondertitel();
            $('#record_verschenen').on('input selectionchange propertychange', function () {
                parse_verschenen();
            });
            $('#record_redactie').on('input selectionchange propertychange', function () {
                parse_redactie();
            });
            $('#record_medewerkers').on('input selectionchange propertychange', function () {
                parse_medewerkers();
            });
            $('#record_eigenaar').on('input selectionchange propertychange', function () {
                parse_eigenaar();
            });
            $('#record_uitgever').on('input selectionchange propertychange', function () {
                parse_uitgever();
            });
            $('#record_drukker').on('input selectionchange propertychange', function () {
                parse_drukker();
            });
            $('#record_uitgave').on('input selectionchange propertychange', function () {
                parse_uitgave();
            });
            $('#record_ondertitel').on('input selectionchange propertychange', function () {
                parse_ondertitel();
            });

    }

    function validate(teststr, type, div){
        $.post('<%= validate_path %>',
            {
                'type': type,
                'teststr': teststr
            },
            function (data) {
                html='<table>';
                trs='';
                for (var i in data) {
                    trs+='<tr>';
                    th='<tr>';
                    for (var k in data[i]) {
                        th += '<th>'+k+'</th>';
                        val=' - ';
                        if (data[i][k]){
                            val=data[i][k];
                        }
                        trs += '<td>' + val + '</td>';
                    }
                    th+='</tr>';
                    trs+='</tr>';
                }
                html += th;
                html += trs;
                html += '</table>'
                $(div).html(html);
                $("textarea").each(function () {
                    var h=this.value;
                    this.value=h.replace(/; /g,';\n');
                    this.style.height = (this.scrollHeight)+'px';
                });
            });

    }

    function parse_redactie(){
        var test=$('#record_redactie').val();
        validate(test, 'persoon','#parsed_redactie');
    }

    function parse_medewerkers(){
        var test=$('#record_medewerkers').val();
        validate(test, 'persoon','#parsed_medewerkers');
    }

    function parse_verschenen(){
        var test=$('#record_verschenen').val();
        validate(test, 'verschenen','#parsed_verschenen');
    }

    function parse_eigenaar(){
        var test=$('#record_eigenaar').val();
        validate(test, 'rest','#parsed_eigenaar');
    }

    function parse_uitgever(){
        var test=$('#record_uitgever').val();
        validate(test, 'rest','#parsed_uitgever');
    }

    function parse_drukker() {
        var test = $('#record_drukker').val();
        validate(test, 'rest', '#parsed_drukker');
    }

    function parse_uitgave() {
        var test = $('#record_uitgave').val();
        validate(test, 'rest', '#parsed_uitgave');
    }

    function parse_ondertitel() {
        var test = $('#record_ondertitel').val();
        validate(test, 'rest', '#parsed_ondertitel');
    }
</script>

