<p id="notice"><%= notice %></p>
<%= link_to 'New Record', new_record_path %>
<h1>Records</h1>
<table id="recordTable" class="table table-striped table-bordered sortable">
  <thead>
    <tr>
      <th>Id</th>
      <th>Titel</th>
      <th>User</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3" class="sorttable_nosort"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.id %></td>
        <td><%= record.titel %></td>
        <td><%= record.user_email %></td>
        <td class="fit"><%= record.created_at.localtime.strftime('%F %R') %></td>
        <td class="fit"><%= record.updated_at.localtime.strftime('%F %R') %></td>
        <td><%= link_to 'Show', {:controller => 'catalog', action: "show", id: record.id}, class: "" %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


